@page
@model Pogodnik.Views.Admin.FavoritesModel
@{
    ViewData["Title"] = "Избранные города";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-star me-2"></i>Избранные города</h1>
                <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-1"></i>Назад в админку
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Список избранных городов</h5>
                        <button class="btn btn-light btn-sm" onclick="refreshFavorites()">
                            <i class="fas fa-sync-alt me-1"></i>Обновить
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="favoritesTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Город</th>
                                    <th>Страна</th>
                                    <th>Пользователь</th>
                                    <th>Добавлен</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Данные будут загружены через JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    async function loadFavorites() {
        try {
            const response = await fetch('/Admin/GetAllFavorites');
            const favorites = await response.json();

            const tbody = document.querySelector('#favoritesTable tbody');
            tbody.innerHTML = '';

            favorites.forEach(fav => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${fav.id}</td>
                    <td><strong>${fav.cityName}</strong></td>
                    <td><span class="badge bg-secondary">${fav.countryCode}</span></td>
                    <td><small class="text-muted">${fav.userId}</small></td>
                    <td>${new Date(fav.addedAt).toLocaleDateString('ru-RU')}</td>
                    <td>
                        <button class="btn btn-sm btn-outline-info" onclick="viewCity('${fav.cityName}')">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="removeFavorite(${fav.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        } catch (error) {
            console.error('Ошибка загрузки избранных:', error);
        }
    }

    function viewCity(cityName) {
        window.open(`/?city=${encodeURIComponent(cityName)}`, '_blank');
    }

    async function removeFavorite(id) {
        if (confirm('Удалить этот город из избранного?')) {
            try {
                const response = await fetch(`/Admin/RemoveFavorite/${id}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    alert('Город удален из избранного!');
                    loadFavorites();
                }
            } catch (error) {
                alert('Ошибка при удалении: ' + error.message);
            }
        }
    }

    function refreshFavorites() {
        loadFavorites();
    }

    document.addEventListener('DOMContentLoaded', loadFavorites);
</script>