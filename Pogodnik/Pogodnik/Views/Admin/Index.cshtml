@{
    ViewData["Title"] = "Админ-панель";
}

<div class="container-fluid mt-4">
    <!-- Хлебные крошки -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i> Главная</a></li>
            <li class="breadcrumb-item active" aria-current="page">Админ-панель</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="mb-1"><i class="fas fa-cogs me-2"></i>Админ-панель Pogodnik</h1>
                            <p class="mb-0 opacity-75">Управление сервисом погоды</p>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-light dropdown-toggle" type="button" id="adminMenu"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-cog me-1"></i>@User.Identity?.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminMenu">
                                <li><a class="dropdown-item" href="/"><i class="fas fa-home me-2"></i>Главная</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-2"></i>Выйти
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Статистика в реальном времени -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Всего поисков
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalSearches">
                                <i class="fas fa-spinner fa-spin me-2"></i>Загрузка...
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-search fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Избранные города -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Избранных городов
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalFavorites">
                                <i class="fas fa-spinner fa-spin me-2"></i>Загрузка...
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-star fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Активные пользователи -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Сегодня
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="todaySearches">
                                <i class="fas fa-spinner fa-spin me-2"></i>Загрузка...
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Популярный город -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Популярный город
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="popularCity">
                                <i class="fas fa-spinner fa-spin me-2"></i>Загрузка...
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-city fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Быстрые действия -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Быстрые действия</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Statistics")" class="btn btn-outline-primary text-start">
                            <i class="fas fa-chart-bar me-2"></i>Просмотр статистики
                        </a>
                        <a href="@Url.Action("SearchHistory")" class="btn btn-outline-success text-start">
                            <i class="fas fa-history me-2"></i>История поиска
                        </a>
                        <button class="btn btn-outline-warning text-start" onclick="clearOldCache()">
                            <i class="fas fa-trash me-2"></i>Очистить старый кэш
                        </button>
                        <button class="btn btn-outline-danger text-start" onclick="exportData()">
                            <i class="fas fa-file-export me-2"></i>Экспорт данных
                        </button>
                    </div>
                </div>
            </div>

            <!-- Системная информация -->
            <div class="card shadow mt-4">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Системная информация</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <strong>Версия:</strong> <span class="badge bg-primary">1.0.0</span>
                    </div>
                    <div class="mb-2">
                        <strong>База данных:</strong> <span class="badge bg-success">SQL Server</span>
                    </div>
                    <div class="mb-2">
                        <strong>Статус API:</strong> <span class="badge bg-success" id="apiStatus">Доступен</span>
                    </div>
                    <div class="mb-2">
                        <strong>Серверное время:</strong> <span id="serverTime">@DateTime.Now.ToString("HH:mm:ss")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Основные модули -->
        <div class="col-lg-8 mb-4">
            <div class="row">
                <!-- Модуль статистики -->
                <div class="col-md-6 mb-4">
                    <div class="card text-white bg-primary h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title"><i class="fas fa-chart-bar me-2"></i>Статистика</h5>
                                    <p class="card-text">Подробная статистика использования сервиса</p>
                                </div>
                                <i class="fas fa-chart-line fa-3x opacity-50"></i>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a href="@Url.Action("Statistics")" class="btn btn-light w-100">
                                <i class="fas fa-arrow-right me-2"></i>Перейти
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Модуль истории -->
                <div class="col-md-6 mb-4">
                    <div class="card text-white bg-success h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title"><i class="fas fa-history me-2"></i>История поиска</h5>
                                    <p class="card-text">Просмотр и управление историей поиска</p>
                                </div>
                                <i class="fas fa-search fa-3x opacity-50"></i>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a href="@Url.Action("SearchHistory")" class="btn btn-light w-100">
                                <i class="fas fa-arrow-right me-2"></i>Перейти
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Модуль избранного -->
                <div class="col-md-6 mb-4">
                    <div class="card text-white bg-warning h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title"><i class="fas fa-star me-2"></i>Избранное</h5>
                                    <p class="card-text">Управление избранными городами</p>
                                </div>
                                <i class="fas fa-heart fa-3x opacity-50"></i>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a href="@Url.Action("Favorites")" class="btn btn-light w-100">
                                <i class="fas fa-arrow-right me-2"></i>Перейти
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Модуль настроек -->
                <div class="col-md-6 mb-4">
                    <div class="card text-white bg-info h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title"><i class="fas fa-sliders-h me-2"></i>Настройки</h5>
                                    <p class="card-text">Настройки сервиса и API</p>
                                </div>
                                <i class="fas fa-cog fa-3x opacity-50"></i>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a href="@Url.Action("Settings")" class="btn btn-light w-100">
                                <i class="fas fa-arrow-right me-2"></i>Перейти
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Модуль пользователей -->
                <div class="col-md-6 mb-4">
                    <div class="card text-white bg-danger h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title"><i class="fas fa-users me-2"></i>Пользователи</h5>
                                    <p class="card-text">Управление пользователями и ролями</p>
                                </div>
                                <i class="fas fa-user-cog fa-3x opacity-50"></i>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <button class="btn btn-light w-100" onclick="showUsers()">
                                <i class="fas fa-arrow-right me-2"></i>Управление
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Модуль логирования -->
                <div class="col-md-6 mb-4">
                    <div class="card text-white bg-secondary h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title"><i class="fas fa-clipboard-list me-2"></i>Логи</h5>
                                    <p class="card-text">Просмотр системных логов</p>
                                </div>
                                <i class="fas fa-file-alt fa-3x opacity-50"></i>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <button class="btn btn-light w-100" onclick="showLogs()">
                                <i class="fas fa-arrow-right me-2"></i>Просмотр
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно управления пользователями -->
<div class="modal fade" id="usersModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-users me-2"></i>Управление пользователями</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="usersTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Имя</th>
                                <th>Email</th>
                                <th>Роли</th>
                                <th>Дата регистрации</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Данные будут загружены через AJAX -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно логов -->
<div class="modal fade" id="logsModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title"><i class="fas fa-clipboard-list me-2"></i>Системные логи</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary active" data-level="all">Все</button>
                        <button type="button" class="btn btn-outline-info" data-level="info">Info</button>
                        <button type="button" class="btn btn-outline-warning" data-level="warning">Warning</button>
                        <button type="button" class="btn btn-outline-danger" data-level="error">Error</button>
                    </div>
                </div>
                <div id="logsContainer" style="max-height: 500px; overflow-y: auto;">
                    <!-- Логи будут загружены через AJAX -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Загрузка статистики
        async function loadStatistics() {
            try {
                const response = await fetch('/Admin/GetStatistics');
                if (response.ok) {
                    const data = await response.json();

                    if (data.success) {
                        document.getElementById('totalSearches').innerHTML =
                            `<i class="fas fa-search me-2"></i>${data.totalSearches.toLocaleString()}`;

                        document.getElementById('totalFavorites').innerHTML =
                            `<i class="fas fa-star me-2"></i>${data.totalFavorites.toLocaleString()}`;

                        document.getElementById('todaySearches').innerHTML =
                            `<i class="fas fa-calendar-day me-2"></i>${data.todaySearches.toLocaleString()}`;

                        if (data.popularCity) {
                            document.getElementById('popularCity').innerHTML =
                                `<i class="fas fa-city me-2"></i>${data.popularCity}`;
                        }
                    }
                }
            } catch (error) {
                console.error('Ошибка загрузки статистики:', error);
            }
        }

        // Проверка статуса API
        async function checkApiStatus() {
            try {
                const response = await fetch('/Weather/CheckApiStatus');
                const apiStatus = document.getElementById('apiStatus');

                if (response.ok) {
                    apiStatus.className = 'badge bg-success';
                    apiStatus.textContent = 'Доступен';
                } else {
                    apiStatus.className = 'badge bg-danger';
                    apiStatus.textContent = 'Недоступен';
                }
            } catch {
                document.getElementById('apiStatus').className = 'badge bg-danger';
                document.getElementById('apiStatus').textContent = 'Ошибка';
            }
        }

        // Обновление времени сервера
        function updateServerTime() {
            const now = new Date();
            document.getElementById('serverTime').textContent =
                now.toLocaleTimeString('ru-RU');
        }

        // Очистка старого кэша
        async function clearOldCache() {
            if (!confirm('Вы уверены, что хотите очистить старый кэш?')) return;

            try {
                const response = await fetch('/Admin/ClearOldCache', { method: 'POST' });
                const result = await response.json();

                if (result.success) {
                    alert('Кэш успешно очищен!');
                    loadStatistics();
                } else {
                    alert('Ошибка при очистке кэша: ' + result.message);
                }
            } catch (error) {
                alert('Ошибка при очистке кэша: ' + error.message);
            }
        }

        // Экспорт данных
        async function exportData() {
            try {
                const response = await fetch('/Admin/ExportData');
                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = `pogodnik-data-${new Date().toISOString().split('T')[0]}.json`;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                }
            } catch (error) {
                alert('Ошибка при экспорте данных: ' + error.message);
            }
        }

        // Показать пользователей
        function showUsers() {
            const modal = new bootstrap.Modal(document.getElementById('usersModal'));
            modal.show();

            // Загрузка пользователей
            fetch('/Admin/GetUsers')
                .then(response => response.json())
                .then(data => {
                    const tbody = document.querySelector('#usersTable tbody');
                    tbody.innerHTML = '';

                    data.forEach(user => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${user.id}</td>
                            <td>${user.name || '-'}</td>
                            <td>${user.email}</td>
                            <td>${user.roles.map(r => `<span class="badge bg-primary">${r}</span>`).join(' ')}</td>
                            <td>${new Date(user.createdAt).toLocaleDateString('ru-RU')}</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" onclick="editUser('${user.id}')">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteUser('${user.id}')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        `;
                        tbody.appendChild(row);
                    });
                });
        }

        // Показать логи
        function showLogs() {
            const modal = new bootstrap.Modal(document.getElementById('logsModal'));
            modal.show();

            // Загрузка логов
            fetch('/Admin/GetLogs')
                .then(response => response.text())
                .then(data => {
                    document.getElementById('logsContainer').innerHTML =
                        `<pre class="bg-dark text-light p-3 rounded">${data}</pre>`;
                });
        }

        // Инициализация при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            loadStatistics();
            checkApiStatus();
            updateServerTime();

            // Обновление времени каждую секунду
            setInterval(updateServerTime, 1000);

            // Обновление статистики каждые 30 секунд
            setInterval(loadStatistics, 30000);

            // Обработчики фильтров логов
            document.querySelectorAll('[data-level]').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('[data-level]').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    // Здесь можно добавить фильтрацию логов
                });
            });
        });
    </script>
}